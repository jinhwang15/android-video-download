<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SalonDetailActivity">

    <LinearLayout
        style="@style/Container"
        android:id="@+id/linearLayout_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="62dp"
            android:paddingRight="16dp"
            android:textColor="#d9000000"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="Square Color Salon &amp; Spa"/>
        <Button
            android:id="@+id/licenseButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="?selectableItemBackground"
            android:fontFamily="sans-serif-normal"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:paddingBottom="8dp"
            android:paddingLeft="62dp"
            android:paddingTop="4dp"
            android:text="Views: 12345"
            android:textAllCaps="false"
            android:textColor="#d9000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/inspector_signature"
            style="@style/ImagePicker"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="52dp"
            android:text="Play movie"
            android:layout_height="260dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hairTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="22dp"
                    android:fontFamily="sans-serif-normal"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="62dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="Download -->>"
                    android:textColor="#d9000000"
                    android:textSize="20sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/other_service_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_gravity="right"
                android:baselineAlignBottom="@+id/licenseButton"
                android:src="@drawable/ic_other_service2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_address_blue"
            android:drawablePadding="22dp"
            android:fontFamily="sans-serif-normal"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColor="#d9000000"
            android:textSize="20sp"
            tools:text="1225 S Fort Apache Rd,\nNV 89117"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_phone_blue"
                    android:drawablePadding="22dp"
                    android:fontFamily="sans-serif-normal"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="(702) 898-5292"
                    android:textColor="#d9000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_email_blue"
                    android:drawablePadding="22dp"
                    android:fontFamily="sans-serif-normal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="hairsalon@gmail.com"
                    android:textColor="#d9000000"
                    android:textSize="20sp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/contacts_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_edit_contacts"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/owner_label"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="46dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/owner_placeholder"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputLayout
                style="@style/EditTextContainer"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="112dp"
                android:layout_marginTop="-8dp">

                <EditText
                    style="@style/FormElement"
                    android:hint="Notes"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_label"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-normal"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/licansees_header"
                    android:textColor="#d9000000"
                    android:textSize="22sp"/>

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="72dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:alpha="0.39"
                    android:onClick="addLicensee"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_licensee_add"/>

            </LinearLayout>

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="72dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="32dp"
                android:onClick="newInspection"
                android:padding="8dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_new_inspection"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="ID"
                    android:textColor="#d9000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Name"
                    android:textColor="#d9000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="In charge"
                    android:textColor="#d9000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Expires"
                    android:textColor="#d9000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Remove"
                    android:textColor="#d9000000"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/licensee_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                tools:background="#18000000"
                tools:layout_height="100dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="16dp"
                android:text="Do you want to proceed?"
                android:textColor="#c0000000"
                android:textSize="20sp"/>

            <ToggleButton
                android:id="@+id/proceed"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:background="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/EditTextContainer"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="-8dp">

            <EditText
                style="@style/FormElement"
                android:hint="Comment"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/salon_signature"
            style="@style/ImagePicker"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="16dp"
            android:text="Salon Manager Signature"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/refuse_sign_container"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="56dp"
                android:paddingRight="16dp"
                android:text="Refuse to sign"
                android:textColor="#c0000000"
                android:textSize="20sp"/>

            <ToggleButton
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:background="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/update"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/update_button_selector"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:onClick="navigateToMainScreen"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="Update\n&amp; Close"
                android:textAllCaps="false"
                android:textColor="@color/button_text_selector"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/compliance_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="#ad00b04f"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:onClick="sanitationCompliance"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="Sanitation\nCompliance"
                android:textAllCaps="false"
                android:textColor="@color/button_text_selector"
                android:textSize="18sp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
