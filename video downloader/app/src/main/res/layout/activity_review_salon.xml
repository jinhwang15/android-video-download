<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
    tools:layout_marginLeft="16dp"
    tools:layout_marginRight="16dp">

    <!--Comment edittext-->
    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/citation_num_edittext"
            style="@style/FormElement"
            android:hint="Citation Number"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/review_photo_upload_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/photo_area"
            android:src="@drawable/camera"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/salon_name_edittext"
            style="@style/FormElement"
            android:hint="Salon Name"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/salon_license_edittext"
            style="@style/FormElement"
            android:hint="License Number : "
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/salon_address1_edittext"
            style="@style/FormElement"
            android:hint="Salon Address1"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/salon_address2_edittext"
            style="@style/FormElement"
            android:hint="Salon Address2"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/EditTextContainer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <EditText
            android:id="@+id/salon_contact_edittext"
            style="@style/FormElement"
            android:hint="Salon Contact Number"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/toggle_container"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/review_satis_toggle"
            style="@style/ToggleButton" />
        <TextView
            android:id="@+id/review_satis_textview"
            style="@style/toggle_label"
            android:paddingLeft="20dp"
            android:text="Review Satisfactory" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/toggle_container"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/citation_issued_toggle"
            style="@style/ToggleButton" />
        <TextView
            android:id="@+id/citation_issued_textview"
            style="@style/toggle_label"
            android:paddingLeft="20dp"
            android:text="Citation Issued" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/button_text_selector"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:background="#10b920"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/button_text_selector"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:padding="20dp"
            android:background="#7ca2d0"/>
    </LinearLayout>


</LinearLayout>
</ScrollView>