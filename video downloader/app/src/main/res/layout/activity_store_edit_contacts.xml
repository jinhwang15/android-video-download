<LinearLayout
    style="@style/Container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".LicenseDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:textColor="#d9000000"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:text="Square Color Salon &amp; Spa"/>

            <Button
                android:id="@+id/licenseButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?selectableItemBackground"
                android:fontFamily="sans-serif-normal"
                android:gravity="left|center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="License S-12345 (current)\nExpires on 9/30/2015"
                android:textAllCaps="false"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_address_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textColor="#d9000000"
                android:textSize="20sp"
                tools:text="1225 S Fort Apache Rd, NV 89117"/>

            <EditText
                android:id="@+id/phone_field"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:inputType="phone"
                android:layout_marginRight="32dp"
                android:drawableLeft="@drawable/ic_phone_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="(702) 898-5292"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:inputType="phone"
                android:layout_marginRight="32dp"
                android:fontFamily="sans-serif-normal"
                android:hint="New phone"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="32dp"
                android:clickable="true"
                android:layout_marginTop="32dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="hairsalon@gmail.com"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:layout_marginRight="32dp"
                android:fontFamily="sans-serif-normal"
                android:hint="New email"
                android:inputType="textEmailAddress"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cancel_button_selector"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:onClick="goBack"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/compliance_button"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:onClick="goBack"
            android:background="#ad00b04f"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</LinearLayout>
