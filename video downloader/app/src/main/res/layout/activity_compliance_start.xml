<LinearLayout
    style="@style/Container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/linearLayout_focus"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".LicenseDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:text="Square Color Salon &amp; Spa"
                android:textColor="#d9000000"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_address_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="1225 S Fort Apache Rd,\nNV 89117"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_phone_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="(702) 898-5292"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_email_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="hairsalon@gmail.com"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/photo_area"
                    android:onClick="addPhoto"
                    android:src="@drawable/camera"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/EditTextContainer"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="16dp">

                <EditText
                    style="@style/FormElement"
                    android:hint="Comment"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/manager_signature"
                style="@style/ImagePicker"
                android:layout_marginRight="52dp"
                android:layout_marginLeft="52dp"
                android:text="Owner/Manager Signature"/>

            <TextView
                android:id="@+id/inspector_signature"
                style="@style/ImagePicker"
                android:layout_marginRight="52dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="52dp"
                android:text="Inspector Signature"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:paddingBottom="16dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/update"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/update_button_selector"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:onClick="goBack"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Exit"
            android:textAllCaps="false"
            android:textColor="@color/button_text_selector"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/compliance_button"
            android:layout_width="140dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="#ad00b04f"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:onClick="submit"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/button_text_selector"
            android:textSize="22sp"/>

    </RelativeLayout>

</LinearLayout>
