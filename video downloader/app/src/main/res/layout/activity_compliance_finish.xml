<LinearLayout
    style="@style/Container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="62dp"
                android:paddingRight="16dp"
                android:text="Square Color Salon &amp; Spa"
                android:textColor="#d9000000"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_address_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="1225 S Fort Apache Rd,\nNV 89117"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_phone_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="(702) 898-5292"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_email_blue"
                android:drawablePadding="22dp"
                android:fontFamily="sans-serif-normal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="hairsalon@gmail.com"
                android:textColor="#d9000000"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/photo_area"
                    android:scaleType="centerCrop"
                    android:src="@drawable/compliance_example"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:paddingTop="8dp">

        <Button
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:background="@drawable/update_button_selector"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:onClick="goBack"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:background="#ad00b04f"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:onClick="done"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:background="#f39c12"
            android:lineSpacingMultiplier="1.1"
            android:onClick="nextPhoto"
            android:text="Take Next\nPhoto"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>